{
  "name": "alantaboev/differ",
  "description": "Вычислитель отличий – программа, определяющая разницу между двумя структурами данных в формате yaml или json. Отчет генерируется в виде plain text, stylish и json",
  "license": "MIT",
  "authors": [
    {
      "name": "Alan Taboev",
      "email": "alantaboev@mail.ru"
    }
  ],
  "bin": ["bin/gendiff"],
  "scripts": {
    "phpcs": "phpcs",
    "phpunit": "phpunit"
  },
  "autoload": {
    "psr-4": {
      "Differ\\": "src",
      "Differ\\Tests\\": "tests"
    },
    "files": [
      "src/Cli.php",
      "src/Differ.php",
      "src/Agregator.php",
      "src/Parsers.php",
      "src/Formatters/Pretty.php",
      "src/Formatters/Plain.php",
      "src/Formatters/Json.php"
    ]
  },
  "require": {
    "docopt/docopt": "^1.0",
    "funct/funct": "^1.5",
    "symfony/yaml": "^5.1",
    "ext-json": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5.5",
    "phpunit/phpunit": "^9.3"
  }
}
